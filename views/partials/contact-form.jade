.row
    .input-field.col.m6.s12
        i.mdi-action-account-circle.prefix
        input#first_name.validate(type="text", name="first_name",value="#{checkForUndefined(contact.first_name)}")
        label(for="first_name") First Name

    .input-field.col.m6.s12
        i.mdi-action-account-circle.prefix
        input#last_name.validate(type="text", name="last_name",value="#{checkForUndefined(contact.last_name)}")
        label(for="last_name") Last Name

    .input-field.col.m6.s12
        i.mdi-action-account-circle.prefix
        input#phone.validate(type="text", name="phone",value="#{checkForUndefined(contact.phone)}")
        label(for="phone") Telephone

    .input-field.col.m6.s12
        i.mdi-communication-email.prefix
        input#email.validate(type="email", name="email",value="#{checkForUndefined(contact.email)}")
        label(for="email") Email

    .input-field.col.s12
        i.mdi-communication-email.prefix
        textarea#address.materialize-textarea(name="address")=checkForUndefined(contact.address)
        label(for="address") Address
